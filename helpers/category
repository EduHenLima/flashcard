-- Return all category
serverless invoke local --function get_category

-- by user
serverless invoke local --function get_category_by_user --data '{
    "id_usuario": 1
}'

-- Create category
serverless invoke local --function create_category --data '{
    "id_usuario": 1,
    "nome_categoria": "Ingles",
    "descricao": "Aulas de Inglês",
    "ativo": 1
}'

-- Delete category
serverless invoke local --function delete_category --data '{"id_categoria": 1}'

--Update
serverless invoke local --function update_category --data '{
    "id_categoria": 5,
    "id_usuario": 1,
    "nome_categoria": "Ingles Update",
    "descricao": "Aulas de Inglês",
    "ativo": 0
}'
